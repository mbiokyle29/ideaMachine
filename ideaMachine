#!/usr/bin/env perl
use Mojolicious::Lite;
use DBI;
my $user = "ideaMac";
my $pass = "deusXmach";

my $dbh = DBI->connect("DBI:mysql:Idea", $user, $pass);
helper db => sub { $dbh };

get '/' => sub {
  my $self = shift;
  $self->render('index');
};

get '/idea' => sub {
	my $self = shift;
	my $idea = $self->param('title');
	my $desc = $self-> param('description');
	my $submitter = $self->param('user');
	$self->render(text =>  "$idea $desc $submitter");

};

sub insert_idea
{
	my $title = shift;
	my $description = shift;
	my $user = shift;
};

app->start;
