<html>
	<head>
		<title> Idea Machine </title>
		<h1> Idea Machine </h1>	
	</head>
	<body>
		<div>
			%= form_for idea => begin
			<p1> Idea Title </p1><br>
			%= text_field 'title'
			<br>
			<p1> Idea Description </p1><br>
			%= text_area 'description'
			<br>
			<p1> Submitter <p1><br>
			%= text_field 'user'
			%= submit_button
			% end
		</div>
		<br><br>
		<div>
			<h1> Newly Added Ideas </h1>
 			<% for my $row ( @{$ideas} ) { %>
 				<li> <%=$row->[0]%> <%=$row->[1]%> <%=$row->[2]%></li>
 				<br>
 			<% } %>
 			
	</body>
</html>
